{
  "name": "trello-api",
  "version": "1.0.0",
  "description": "Task Manager REST API using Hono and Bun/Node.js",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:node": "npx tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "vercel-build": "echo 'No build step required for Vercel deployment'"
  },
  "keywords": ["api", "rest", "hono", "bun", "nodejs", "typescript", "task-manager"],
  "author": "rnegic",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.16.0",
    "hono": "^4.8.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
